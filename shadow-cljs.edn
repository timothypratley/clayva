{:deps true
 :builds
 {:extension {:target :node-library
              :js-options {:js-provider :shadow
                           :keep-native-requires true
                           :keep-as-require #{"vscode"}}
              :compiler-options {:infer-externs :auto}
              :output-dir "out/js"
              :output-to "out/extension.js"
              :exports {:activate clayva.extension/activate
                        :deactivate clayva.extension/deactivate}
              :devtools {:build-notify clayva.extension/build-notify!}}
  :test-watch
  {:target    :node-test
   :output-to "out/extension-tests.js"
   :ns-regexp "-test$"
   :autorun   true}

  :test-compile
  {:target    :node-test
   :output-to "out/extension-tests.js"
   :ns-regexp "-test$"}}}
